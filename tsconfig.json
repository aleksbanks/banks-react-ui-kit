{
	"target": "ES2015",
	"compilerOptions": {
		"rootDir": "./src",
		"baseUrl": "./src",
		"outDir": "lib",
		"module": "esnext",
		"target": "es5",
		"lib": ["es6", "dom", "es2016", "es2017"],
		"jsx": "react",
		"declaration": true,
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"noEmit": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "lib", "src/_stories", "**/*.stories.tsx"]
}
